<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lad.mapper.PictureMapper">

    <select id="searchPicturesByTag" resultType="Picture">
        SELECT * FROM picture
        WHERE
        <foreach collection="tags" item="tag" separator=" OR ">
            tags LIKE CONCAT('%', #{tag}, '%')
        </foreach>
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="selectPicturesByConcern" resultType="Picture">
        SELECT * FROM picture
        WHERE
        <foreach collection="userIds" item="userId" separator=" OR ">
            user_id = #{userId}
        </foreach>
        LIMIT #{offset}, #{pageSize}
    </select>
</mapper>